def calculate_pmt(rate, periods, present_value):
    pmt = (rate * present_value) / (1 - (1 + rate) ** -periods)
    return pmt

# Example values
interest_rate = float(input("Enter your interest rate in percent: "))/100
loan_periods = int(input("Enter your periods in month: "))
principal = float(input("Enter your loan amount: "))
# Calculating the PMT
monthly_payment = calculate_pmt(interest_rate, loan_periods, principal)
print(f"The monthly payment (PMT) for the loan is: {round(monthly_payment, 2)}")
