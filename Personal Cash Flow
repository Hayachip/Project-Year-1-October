def calculate_cash_flow(income, expenses):
    cash_flow = income - expenses
    return cash_flow

# Monthly payment and income
monthly_income = float(input("Enter your income: "))
monthly_expenses = float(input("Enter your expense: "))

# Calculate cash flow
monthly_cash_flow = calculate_cash_flow(monthly_income, monthly_expenses)
print(f"The monthly cash flow is: ${monthly_cash_flow}")